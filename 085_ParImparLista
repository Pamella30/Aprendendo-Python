num = [[], []]
valor = 0
for n in range(1, 8):
    valor = int(input(f'Digite o {n} numero: '))
    if valor % 2 == 0:
        num[0].append(valor)
    else:
        num[1].append(valor)

print('=' * 60)
print(f'Os valores pares foram {sorted(num[0])}')
print(f'Os valores impares foram {sorted(num[1])}')

