print('=' * 40)
print(f'{"Lista de compras":^30}')
print('=' * 40)
lista = ('Batata', 2, 'Cenoura', 1, 'Arroz', 1, 'Papel higienico', 3, 'Detergente', 1 )
for pos in range(0, len(lista)):
    if pos % 2 == 0:
        print(f'{lista[pos]:.<30}', end='')
    else:
        print(f'R${lista[pos]:>5.2f}')