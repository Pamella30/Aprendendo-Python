import moeda
preco = float(input('Digite o preco do produto: R$ '))
taxa = int(input('Qual a taxa de aumento: '))
taxd = int(input('Qual a taxa de desconto: '))
print(f'A metade de {moeda.moeda(preco)} e {moeda.metade(preco, True)}')
print(f'O dobro de {moeda.moeda(preco)} e {moeda.dobro(preco, True)}')
print(f'Aumentando {taxa}% de {moeda.moeda(preco)} fica {moeda.aumentar(preco, taxa, True)}')
print(f'Diminuindo {taxd}% de {moeda.moeda(preco)} fica {moeda.diminuir(preco, taxd, True)}')
