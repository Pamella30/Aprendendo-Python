lista = []
while True:
    lista.append(int(input('Digite um valor: ')))
    res = str(input('Quer continuar? [S/N] ')).strip().upper()
    if res == 'N':
        break
print('=' * 30)
print(f'Voce digitou {len(lista)} numeros')
lista.sort(reverse=True)
print(f'Os valores em ordem descrescente sao {lista}')
if 5 in lista:
    print(f'O valor 5 esta na lista!')
else:
    print(f'O valor 5 nao esta na lista!')
print('Programa encerrado!')